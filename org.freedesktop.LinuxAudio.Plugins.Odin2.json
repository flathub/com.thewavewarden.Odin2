{
    "id": "org.freedesktop.LinuxAudio.Plugins.Odin2",
    "runtime": "org.freedesktop.LinuxAudio.BaseExtension",
    "sdk": "org.freedesktop.Sdk//21.08",
    "runtime-version": "21.08",
    "build-extension": true,
    "appstream-compose": false,
    "branch": "21.08",
    "build-options": {
        "prepend-pkg-config-path": "/app/extensions/Plugins/Odin2/lib/pkgconfig",
        "prefix": "/app/extensions/Plugins/Odin2"
    },
    "cleanup": [
        "/lib/lv2"
    ],
    "modules": [
        "shared-modules/linux-audio/lv2.json",
        {
            "name": "odin2",
            "buildsystem": "simple",
            "build-commands": [
                "(cd JUCE/extras/Projucer/Builds/LinuxMakefile && make -j ${FLATPAK_BUILDER_N_JOB} CONFIG=Release)",
                "JUCE/extras/Projucer/Builds/LinuxMakefile/build/Projucer --set-global-search-path linux defaultJuceModulePath /run/build/odin2/JUCE/modules",
                "JUCE/extras/Projucer/Builds/LinuxMakefile/build/Projucer --resave Odin.jucer",
                "make -C Builds/LinuxMakefile CONFIG=Release VST3 LV2"
            ],
            "post_install": [
                "install -d ${FLATPAK_DEST}/lv2",
                "cp -R Builds/LinuxMakefile/build/Odin2_.lv2 ${FLATPAK_DEST}/lv2/Odin2.lv2",
                "strip --strip-unneeded ${FLATPAK_DEST}/lv2/*.lv2/*.so",
                "install -d ${FLATPAK_DEST}/vst3",
                "cp -R Builds/LinuxMakefile/build/Odin2.vst3 ${FLATPAK_DEST}/vst3",
                "strip --strip-unneeded ${FLATPAK_DEST}/vst3/Odin2.vst3/Contents/*/Odin2.so",
                "install -d ${FLATPAK_DEST}/odin2",
                "cp -R Soundbanks ${FLATPAK_DEST}/odin2",
                "install -Dm644 -t ${FLATPAK_DEST}/share/licenses/odin2 LICENSE ",
                "install -Dm644 --target-directory=${FLATPAK_DEST}/share/metainfo org.freedesktop.LinuxAudio.Plugins.Odin2.metainfo.xml",
                "appstream-compose --basename=org.freedesktop.LinuxAudio.Plugins.Odin2 --prefix=${FLATPAK_DEST} --origin=flatpak org.freedesktop.LinuxAudio.Plugins.Odin2"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/TheWaveWarden/odin2",
                    "commit": "3ed86f9eced0ae74e9ec0c977f1afb2f89dc890b",
                    "tag": "v2.3.1"
                },
                {
                    "type": "git",
                    "url": "https://github.com/lv2-porting-project/JUCE.git",
                    "commit": "b13af2df9530bf473ff9a85936e5700027bd2af4",
                    "dest": "JUCE"
                },
                {
                    "type": "patch",
                    "path": "odin2-project.patch"
                },
                {
                    "type": "patch",
                    "path": "lv2.patch"
                },
                {
                    "type": "patch",
                    "path": "juce-path.patch"
                },
                {
                    "type": "patch",
                    "path": "odin2-aarch64.patch"
                },
                {
                    "type": "shell",
                    "commands": [
                        "echo \"#define GIT_COMMIT_ID \\\"`git rev-parse HEAD | cut -c 1-8`\\\" \" > Source/GitCommitId.h"
                    ]
                },
                {
                    "type": "file",
                    "path": "org.freedesktop.LinuxAudio.Plugins.Odin2.metainfo.xml"
                }
            ]
        }
    ]
}
